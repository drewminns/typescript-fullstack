{
  "name": "typescript-fullstack",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server/index.js",
  "scripts": {
    "build": "npm-run-all clean lint tsc:server build:client",
    "build:client": "webpack --mode production",
    "clean": "rimraf dist/*",
    "cypress": "run-p dev:test cypress:open",
    "cypress:headless": "run-p dev:test cypress:run",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "dev": "run-p dev:server dev:client",
    "dev:client": "webpack-dev-server --mode development --devtool inline-source-map --hot --open",
    "dev:clienttest": "webpack-dev-server --mode development",
    "dev:server": "ts-node-dev --respawn --transpileOnly ./src/server/index.ts",
    "dev:test": "run-p dev:server dev:clienttest",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "test:watch": "NODE_ENV=test jest --watch",
    "test": "NODE_ENV=test jest",
    "test:coverage": "jest --coverage --colors",
    "tsc:server": "tsc --p tsconfig.server.json",
    "start": "npm run build && NODE_ENV=production node dist/server/index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm test"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "dotenv": "^8.0.0",
    "eslint": "^6.2.1",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "express": "^4.17.1",
    "helmet": "^3.20.0",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0"
  },
  "devDependencies": {
    "@overnightjs/core": "^1.6.9",
    "@overnightjs/logger": "^1.1.9",
    "@testing-library/jest-dom": "^4.1.0",
    "@testing-library/react": "^9.1.3",
    "@types/axios": "^0.14.0",
    "@types/dotenv": "^6.1.1",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/express": "^4.17.0",
    "@types/helmet": "0.0.43",
    "@types/jest": "^24.0.18",
    "@types/morgan": "^1.7.36",
    "@types/node": "^12.7.1",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "@types/supertest": "^2.0.8",
    "babel-loader": "^8.3.0",
    "babel-polyfill": "^6.26.0",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^6.7.3",
    "cypress": "^3.4.1",
    "eslint-plugin-react": "^7.14.3",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3",
    "style-loader": "^1.3.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-loader": "^9.4.2",
    "ts-node-dev": "^1.0.0-pre.40",
    "typescript": "^3.5.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^3.8.0"
  }
}
